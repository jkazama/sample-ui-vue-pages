doctype html
html(lang="ja")
  head
    meta(charset="utf-8")
    meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")
    block title
      title アプリケーション
    link(rel="stylesheet" href="/css/vendor.css")
    link(rel="stylesheet" href="/css/style.css")
    script(src="/js/vendor.bundle.js")
    block head-last
  body
  .container-fluid
    header.navbar.navbar-expand-md.navbar-dark.bg-secondary.mb-2.l-nav-header
      a.navbar-brand(href="/") App
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item: a.nav-link(href="/index.html") "取扱い商品名 (TOP)" 
          li.nav-item: a.nav-link(href="/trade.html") 取引情報
          li.nav-item: a.nav-link(href="/asset.html") 口座資産
        ul.navbar-nav
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false")
              span(v-text="user.name")
              |  様 
              span.caret
            ul.dropdown-menu.dropdown-menu-right(role="menu")
              li.dropdown-item: a
                i.fa.fa-fw.fa-user
                |  アカウント情報
              li.dropdown-divider
              li.dropdown-item: a(href="#" @click.prevent="logout")
                i.fa.fa-fw.fa-sign-out
                |  ログアウト
    #app
      message(global=true)
      block content
    block body-last
