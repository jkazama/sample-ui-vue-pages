doctype html
html(lang="ja")
  head
    meta(charset="utf-8")
    meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")
    block title
      title アプリケーション
    link(rel="stylesheet" href="/css/vendor.css")
    link(rel="stylesheet" href="/css/style.css")
    script(src="/js/vendor.bundle.js")
    block head-last
  body
    nav.navbar.navbar-default.navbar-static-top.l-nav-header
      .navbar-header
        a.navbar-brand(href="/") App
      ul.nav.navbar-nav
        li: a(href="/index.html") "取扱い商品名 (TOP)" 
        li: a(href="/trade.html") 取引情報
        li: a(href="/asset.html") 口座資産
      ul.nav.navbar-nav.navbar-right
        li.dropdown
          a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false")
            span(v-text="user.name")
            |  様 
            span.caret
          ul.dropdown-menu(role="menu")
            li: a
              i.fa.fa-fw.fa-use
              |  アカウント情報
            li.divider
            li: a(href="#" @click.prevent="logout")
              i.fa.fa-fw.fa-sign-out
              |  ログアウト
    #app.container
      block content
    block body-last
